# =============================================================================
# Phantom Scheduler - Environment Configuration
# =============================================================================
# Copy this file to .env and update with your actual values
# Never commit .env to version control!

# =============================================================================
# Django Settings
# =============================================================================

# Secret key for cryptographic signing (REQUIRED)
# Generate a new key for production: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-change-this-in-production

# Debug mode (set to False in production)
DEBUG=True

# Allowed hosts (comma-separated list of domains)
# Example: yourdomain.com,www.yourdomain.com,api.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# Database Configuration
# =============================================================================

# Database URL (Optional - defaults to SQLite for development)
# For production, use PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/database_name
# 
# Examples:
# - Local PostgreSQL: postgresql://phantom_user:password@localhost:5432/phantom_db
# - Heroku PostgreSQL: postgres://user:pass@host:5432/dbname
# - AWS RDS: postgresql://user:pass@rds-instance.region.rds.amazonaws.com:5432/dbname

# =============================================================================
# JWT Authentication Settings
# =============================================================================

# Access token lifetime in minutes (default: 15 minutes)
JWT_ACCESS_TOKEN_LIFETIME=15

# Refresh token lifetime in minutes (default: 10080 = 7 days)
JWT_REFRESH_TOKEN_LIFETIME=10080

# =============================================================================
# Google Gemini API (REQUIRED for AI features)
# =============================================================================

# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# =============================================================================
# Google Calendar Integration (Optional)
# =============================================================================

# OAuth2 credentials for Google Calendar sync
# Set up at: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/google/callback

# For production, update redirect URI to your domain:
# GOOGLE_REDIRECT_URI=https://yourdomain.com/api/auth/google/callback

# =============================================================================
# Celery & Redis (REQUIRED for async tasks)
# =============================================================================

# Redis connection URL for Celery broker
CELERY_BROKER_URL=redis://localhost:6379/0

# Redis connection URL for Celery results backend
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# For production with authentication:
# CELERY_BROKER_URL=redis://:password@localhost:6379/0
# CELERY_RESULT_BACKEND=redis://:password@localhost:6379/0

# =============================================================================
# CORS Settings
# =============================================================================

# Allowed origins for CORS (comma-separated list)
# Add your frontend URLs here
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# For production:
# CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =============================================================================
# Additional Production Settings (Optional)
# =============================================================================

# Email configuration (for notifications)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Sentry DSN (for error tracking)
# SENTRY_DSN=https://your-sentry-dsn

# Time zone (default: UTC)
# TIME_ZONE=America/New_York

# =============================================================================
# Notes
# =============================================================================
# 
# 1. Required for basic functionality:
#    - SECRET_KEY
#    - GEMINI_API_KEY
#    - CELERY_BROKER_URL
#    - CELERY_RESULT_BACKEND
#
# 2. Optional but recommended:
#    - DATABASE_URL (use PostgreSQL in production)
#    - GOOGLE_CLIENT_ID and GOOGLE_CLIENT_SECRET (for calendar sync)
#
# 3. Production checklist:
#    - Set DEBUG=False
#    - Generate a strong SECRET_KEY
#    - Configure ALLOWED_HOSTS with your domain
#    - Use PostgreSQL instead of SQLite
#    - Enable HTTPS and update redirect URIs
#    - Set up proper CORS_ALLOWED_ORIGINS
#
# 4. Security:
#    - Never commit .env to version control
#    - Use strong, unique passwords
#    - Rotate secrets regularly
#    - Use environment-specific configurations
#
# =============================================================================
